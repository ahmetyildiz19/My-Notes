@using Notlarim102.WebApp
@model IEnumerable<Notlarim102.Entity.Category>

@{
    ViewBag.Title = "Index";
}

<br />

<p>
    @Bootstrap.LinkButton("/Category/Create/", "primary", string.Empty," Kayıt Ekle","bi bi-plus-circle"," Kayıt Ekle")
    @*@Html.ActionLink(" Kayıt Ekle ", "Create", null, new { @class = "btn btn-outline-primary far fa-copy" })*@
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedOn)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUserName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedOn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedUserName)
            </td>
            <td>
                
                <div class="btn-default btn-group-justified" role="group" aria-label="...">
                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-outline-primary far fa-edit" })
                    @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-outline-success bi bi-search" })
                    @Bootstrap.LinkButton("/Category/Delete/" + @item.Id, "danger", "", "Sil", "bi bi-trash-fill", string.Empty)
                    @*<a href="/Category/Delete/@item.Id" class="btn" title="Sil"><i class="btn btn-outline-danger bi bi-trash-fill"></i></a>*@

                </div>
            </td>
        </tr>
    }
</table>
