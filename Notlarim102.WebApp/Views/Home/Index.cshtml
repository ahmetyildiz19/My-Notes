@using Notlarim102.Entity
@model List<Note>

@{
    ViewBag.Title = "Index";
}


<!-- Section-->
<section class="py-5">
    <div class="container px-4 px-lg-5 mt-5">
        <div class="row gx-4 gx-lg-5 row-cols-1 row-cols-md-2 row-cols-xl-3 justify-content-center">

            @foreach (Note note in Model)
            {
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="https://picsum.photos/450/300?random=@note.Id" alt="..." />
                        <!-- Product details-->
                        <div class="card-body px-1 py-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">İlk Yazım -@note.Title </h5>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <i class="far fa-user fw-bold"></i> @note.Owner.Username
                                    </div>
                                    <div>
                                        <i class="far fa-clock fw-bold"></i> @note.ModifiedOn.ToString("dd.MM.yy HH:mm")
                                    </div>
                                </div>
                                <hr />
                                <p class="card-text">
                                    @if (string.IsNullOrEmpty(note.Text) == false && note.Text.Length > 100)
                                    {
                                        @(note.Text.Substring(0,100)+"...")
                                    }
                                    else
                                    {
                                        @note.Text
                                    }
                                </p>

                            </div>

                        </div>

                        <hr />
                        <div class="bg-transparent d-flex justify-content-between">
                            <p>
                                <button type="button" class="btn btn-outline-light text-dark btn-sm">
                                    <i class="bi-star-fill text-success"></i> @note.LikeCount
                                </button>
                            </p>
                            <p>
                                <button type="button" class="btn btn-outline-light text-dark btn-sm" data-bs-toggle="modal" data-bs-target="#modal_comment" data-note-id="@note.Id">
                                    <i class="bi bi-chat-left-dots-fill text-success"></i> Yorumlar
                                </button>
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

@Bootstrap.ModalPopup("modal_comment", "Yorumlar")
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script>
    var noteId = -1;
    var modalCommentBodyId = '#modal_comment_body';

    $(function () {
        $('#modal_comment').on('show.bs.modal', function (e) {
            var btn = $(e.relatedTarget);
            noteId = btn.data("note-id");
            $(modalCommentBodyId).load("/Comment/ShowNoteComments/" + noteId);
        });
    })
</script>