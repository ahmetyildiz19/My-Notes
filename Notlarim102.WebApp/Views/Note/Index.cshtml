@model IEnumerable<Notlarim102.Entity.Note>

@{ ViewBag.Title = "Index"; }


<link href="~/Content/yeni2.css" rel="stylesheet" />

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.11.3/css/dataTables.bootstrap4.min.css" rel="stylesheet" />

<link href="~/Content/yeni1.css" rel="stylesheet" />

<h2>Notlarım</h2>

<p>
    @Bootstrap.LinkButton("/Note/Create/", "primary", string.Empty, " Kayıt Ekle", "bi bi-plus-circle", " Kayıt Ekle")
</p>
<table id="example" class="table table-striped table-bordered" style="width:100%">

    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsDraft)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LikeCount)
            </th>
            <th>
                İşlem Yap
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {

<tr>
    <th>
        @Html.DisplayFor(modelItem => item.Category.Title)
    </th>
    <th>
        @Html.DisplayFor(modelItem => item.Title)
    </th>
    <th>
        @Html.DisplayFor(modelItem => item.Text)
    </th>
    <th>
        @Html.DisplayFor(modelItem => item.IsDraft)
    </th>
    <th>
        @Html.DisplayFor(modelItem => item.LikeCount)
    </th>
    <th>
        @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "btn btn-primary far fa-edit" })
        @Html.ActionLink(" ", "Details", new { id = item.Id }, new { @class = "btn btn-secondary bi bi-card-list" })
        @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "btn btn-danger bi bi-trash" })
    </th>
</tr>
}

</table>
<script src="~/Scripts/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/dataTables.bootstrap4.min.js"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>